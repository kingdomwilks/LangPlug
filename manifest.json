{
  "name": "Seneca  - Learn Languages",
  "version": "1.0",
  "description": "Learn French, Spanish, and German on the browse!",
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  
 "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "css": ["sheet.css"],
     "run_at": "document_idle",
     "all_frames": true,
     "js" : ["content.js" ]
   }
  ],
  "manifest_version": 2
}
